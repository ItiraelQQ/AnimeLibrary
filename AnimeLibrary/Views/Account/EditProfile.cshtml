@model EditProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-4">
    <h2 class="mb-4">Изменить профиль</h2>

    <form asp-action="EditProfile" method="post" class="needs-validation" novalidate>
        <div class="form-group">
            <label asp-for="UserName" class="control-label">User Name</label>
            <input asp-for="UserName" class="form-control" required />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProfilePictureUrl" class="control-label">Ссылка на картинку для аватарки</label>
            <input asp-for="ProfilePictureUrl" class="form-control" required />
            <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Bio" class="control-label">О себе</label>
            <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Сохранить изменения</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // JavaScript for client-side form validation
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}

