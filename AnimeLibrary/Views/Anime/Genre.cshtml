@model AnimeLibrary.Models.HomeViewModel

@{
    ViewData["Title"] = "Anime";
}

<h2>@ViewData["Title"]</h2>

<div class="dropdown-content">
    @foreach (var genre in Model.Genres)
    {
        <a asp-controller="Anime" asp-action="Genre" asp-route-genre="@genre">@genre</a>
    }
</div>

    @if (Model.AllAnimes != null && Model.AllAnimes.Any())
    {
        <div class="anime-list">
            @foreach (var anime in Model.AllAnimes)
            {
                <div class="anime-item">
                    <a asp-controller="Anime" asp-action="Details" asp-route-id="@anime.Id">
                    <h3>@anime.EnglishTitle</h3>
                    <img src="@anime.CoverImage" alt="Image">
                    </a>
                </div>
            }
        </div>
    }
</div>


<style>
    
    .dropdown-content {
        position: fixed; /* Фиксированная позиция */
        top: 150px; /* Располагаем список сразу после шапки страницы */
        left: 0; /* Прикрепляем список к левому краю страницы */
        display: block; /* Отображаем по умолчанию */
        background-color: black; /* Цвет фона */
        min-width: 160px; /* Минимальная ширина */
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2); /* Тень */
        z-index: 1; /* На переднем плане */
        max-height: 575px; /* Максимальная высота списка для возможности прокрутки */
        overflow-y: auto; /* Включаем вертикальную прокрутку */
    }



        .dropdown-content::-webkit-scrollbar {
            width: 5px; /* Ширина полосы прокрутки */
        }

        .dropdown-content::-webkit-scrollbar-thumb {
            background-color: #888; /* Цвет ползунка */
            border-radius: 10px; /* Скругление углов ползунка */
        }

        .dropdown-content a {
            display: block; /* Сделать ссылки блочными элементами */
            padding: 12px 16px; /* Отступы вокруг текста ссылок */
            color: white; /* Цвет текста ссылок */
            text-decoration: none; /* Убираем подчеркивание текста ссылок */
        }

            .dropdown-content a:hover {
                background-color: #555; /* Цвет фона ссылок при наведении */
            }



    a{
        text-decoration: none;
        color: white;
    }

    a:hover{
        color: #ffa500;
    }
    .content-wrapper {
        display: flex;
        align-items: flex-start;
    }

    .genre-list {
        flex: 1;
        margin-right: 40px; /* Отступ между списком жанров и списком аниме */
        background-color: #ffa500; /* Светлый фон для списка жанров */
        padding: 20px;
        border-radius: 10px; /* Скругленные углы */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Тень для списка жанров */
    }

    .genre-item {
        background-color: black; /* Фон для каждого жанра */
        margin-bottom: 10px;
        padding: 10px;
        border-radius: 10px; /* Скругленные углы для жанров */
        text-align: center;

    }

    .anime-list {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 10px;
        flex: 3; /* Занимает оставшееся пространство */
    }

    .anime-item {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: center;
    }

        .anime-item img {
           
            object-fit: cover; /* Обрезка изображения для поддержания пропорций без искажений */
        }
</style>


