@model AnimeLibrary.Models.MangaGenreViewModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/nprogress/0.2.0/nprogress.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/nprogress/0.2.0/nprogress.min.js"></script>

@{
    ViewData["Title"] = Model.Genre + " Manga";
}

<h2>@Model.Genre Manga</h2>


<div id="animeContainer" class="anime-list">
    @foreach (var manga in Model.Mangas)
    {
        <div class="anime-item">
            <a asp-controller="Manga" asp-action="Details" asp-route-id="@manga.Id">
                <div class="anime-title">@manga.TitleRomaji</div>
                <img src="@manga.CoverImage" alt="@manga.TitleRomaji" />
                <div class="anime-description">
                    @Html.Raw(manga.Description) <!-- Используйте Html.Raw, если описание содержит HTML -->
                </div>
            </a>
        </div>
    }
</div>

<div class="dropdown-content">
    @foreach (var genre in Model.Genres)
    {
        <a asp-controller="Manga" asp-action="Genre" asp-route-genre="@genre">@genre</a>
    }
</div>

<script>
    let page = 1;
    const perPage = 15;
    let genre = '@Model.Genre';

    async function loadMoreManga() {
        page++;
        NProgress.start();
        const response = await fetch(`/Manga/LoadMoreManga?genre=${genre}&page=${page}&perPage=${perPage}`);
        if (response.ok) {
            const html = await response.text();
            document.getElementById('animeContainer').insertAdjacentHTML('beforeend', html);
        } else {
            console.error('Failed to load more anime:', response.statusText);
        }
        NProgress.done();
    }

    window.onscroll = function () {
        if ((window.innerHeight + window.scrollY) >= document.body.offsetHeight) {
            loadMoreManga();
        }
    };
</script>

<style>
    .dropdown-content {
        position: fixed;
        top: 100px; /* Обновлено для мобильных устройств */
        left: 0;
        display: block;
        background-color: black;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
        max-height: 575px;
        overflow-y: auto;
    }

        .dropdown-content::-webkit-scrollbar {
            width: 5px;
        }

        .dropdown-content::-webkit-scrollbar-thumb {
            background-color: #888;
            border-radius: 10px;
        }

        .dropdown-content a {
            display: block;
            padding: 12px 16px;
            color: white;
            text-decoration: none;
        }

            .dropdown-content a:hover {
                background-color: #555;
            }

    .dropdown-btn:hover .dropdown-content {
        display: block;
    }

    a {
        text-decoration: none;
        color: white;
    }

        a:hover {
            color: #ffa500;
        }

    .content-wrapper {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .genre-list {
        flex: 1;
        margin-right: 20px;
        background-color: #555;
        padding: 10px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .genre-item {
        background-color: black;
        margin-bottom: 10px;
        padding: 10px;
        border-radius: 10px;
        text-align: center;
    }

    .anime-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        width: 100%;
        padding: 20px;
    }

    .anime-item {
        border: 1px solid #ccc;
        border-radius: 10px;
        overflow: hidden;
        background-color: black;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s, box-shadow 0.2s;
        text-align: center;
        display: flex;
        flex-direction: column;
    }

        .anime-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .anime-item img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-bottom: 1px solid #ccc;
        }

    .anime-title {
        font-size: 1.2em;
        color: white;
        padding: 10px;
        background-color: #555;
        border-bottom: 1px solid #ccc;
        flex: 0 0 auto;
    }

        .anime-title:hover {
            color: white;
            background-color: orange;
        }

    .anime-description {
        padding: 10px;
        font-size: 0.9em;
        color: #666;
        flex: 1 1 auto;
        overflow: hidden;
    }

        .anime-description p {
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 3;
            overflow: hidden;
        }

    /* Медиа-запросы для мобильных устройств */
    @@media (max-width: 768px) {
        .dropdown-content {
            top: 60px;
            right: 0;
            left: auto;
        }

        .content-wrapper {
            flex-direction: column;
            align-items: stretch;
        }

        .genre-list {
            margin-right: 0;
            margin-bottom: 20px;
        }

        .anime-list {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        }

        .anime-title {
            font-size: 1em;
        }

        .anime-description {
            font-size: 0.8em;
        }

        .anime-item img {
            height: 200px;
        }
    }

    @@media (max-width: 480px) {
        .dropdown-content {
            top: 50px;
            right: 0;
            left: auto;
        }

        .anime-list {
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        }

        .anime-title {
            font-size: 0.9em;
        }

        .anime-description {
            font-size: 0.7em;
        }

        .anime-item img {
            height: 150px;
        }
    }
</style>



